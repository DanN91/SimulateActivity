<Window x:Class="SimulateActivity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulateActivity"
        mc:Ignorable="d"
        FontSize="18"
        FontFamily="Georgia"
        Title="Simulate Activity" Height="150" Width="330" ResizeMode="CanMinimize" StateChanged="OnStateChanged">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Text="Minimize Me to Stop Me!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<TextBlock Grid.Row="1" Text="Or Don't and I will simulate activity!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</Window>
